<div class="container">
  <h1 class="title">Welcome to Meal Prepper!</h1>
  <p>Your one-stop solution for meal preparation and planning. Discover delicious meals, essential ingredients, and creative recipes.</p>

  <div class="section">
    <div class="columns">
      <div class="column">
        <h2 class="title is-2">Top 10 Meals</h2>
        <ol class="ml-5">
          <% @meals.each do |meal| %>
            <li>
              <%= link_to meal.name, meal_index_path(meal) %>
              <em>(<%= meal.description %>)</em>
            </li>
          <% end %>
        </ol>
        <p class="mt-5">
          <strong><%= link_to 'ðŸ‘‰ See All Meals', meal_index_path %></strong>
        </p>
      </div>

      <div class="column">
        <h2 class="title is-2">Top 10 Ingredients</h2>
        <ol class="ml-5">
          <% @ingredients.each do |ingredient| %>
            <li>
              <%= ingredient.name %>
              <em>(<%= ingredient.measurement_unit %>)</em>
            </li>
          <% end %>
        </ol>
        <p class="mt-5">
          <strong><%= link_to 'ðŸ‘‰ See All Ingredients', ingredient_index_path %></strong>
        </p>
      </div>
    </div>

    <div class="section">
      <h2 class="title is-2">Search</h2>
      <%= form_with url: search_field_tag, method: :get, local: true do %>
        <div class="field">
          <div class="control">
            <%= text_field_tag :query, nil, placeholder: "Search meals, ingredients...", class: 'input' %>
          </div>
        </div>
        <div class="control">
          <%= submit_tag "Search", class: 'button is-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

