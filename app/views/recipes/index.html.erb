<h1>Recipes</h1>

<%= link_to '🏠 Back to Home', root_path, class: 'button is-link' %>

  <div class="section">
    <h2 class="title is-3">Top 5 Popular Recipes</h2>
    <ol>
        <% @top_recipes.each do |recipe| %>
          <li>
            <%= link_to recipe.title, recipe_path(recipe) %>
            <em>(<%= recipe.instructions %>)</em>
          </li>
        <% end %>
    </ol>
  </div>

  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <%= link_to recipe.title, recipe_path(recipe) %> 
      </li>
  </ul>
<% end %>
